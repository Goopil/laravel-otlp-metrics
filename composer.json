{
    "name": "goopil/laravel-otlp-metrics",
    "description": "A Laravel package for OpenTelemetry metrics push with gRPC and HTTP",
    "type": "library",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Goopil"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3|^8.4|^8.5",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "open-telemetry/api": "^1.0",
        "open-telemetry/sdk": "^1.0",
        "open-telemetry/exporter-otlp": "^1.0",
        "open-telemetry/sem-conv": "^1.0",
        "symfony/http-client": "^6.4|^7.0|^8.0",
        "nyholm/psr7": "^1.8"
    },
    "suggest": {
        "laravel/horizon": "^5.0|^6.0 - Required for Laravel Horizon metrics support",
        "open-telemetry/transport-grpc": "Required for gRPC push support (requires ext-grpc)"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "mockery/mockery": "^1.6|^2.0",
        "laravel/pint": "^1.13",
        "orchestra/testbench": "^8.0",
        "laravel/horizon": "^5.41"
    },
    "autoload": {
        "psr-4": {
            "Goopil\\OtlpMetrics\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Goopil\\OtlpMetrics\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:feature": "phpunit --testsuite=Feature",
        "lint": "pint",
        "lint:test": "pint --test",
        "format": "pint",
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Goopil\\OtlpMetrics\\OtlpMetricsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "tbachert/spi": false
        }
    }
}